{
  "manifest_version": 3,
  "name": "DSA Reminder",
  "version": "1.0",
  "description": "Remind users to solve DSA problems every 1 hour.",
  "permissions": ["notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
